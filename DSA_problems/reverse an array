def reverse_array(arr):
    """Reverse an array in place using two pointers."""
    left, right = 0, len(arr) - 1
    while left < right:
        arr[left], arr[right] = arr[right], arr[left]
        left += 1
        right -= 1
    return arr


if __name__ == "__main__":
    data = [1, 2, 3, 4, 5]
    print("Original:", data)
    print("Reversed:", reverse_array(data))
